<button
  type="button"
  class="btn btn-outline-light home-text"
  data-mdb-toggle="modal"
  data-mdb-target="#exampleModal"
>
  
  Start a Petition

</button>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="exampleModalLabel">Start a Petition</h5>
        <button
          type="button"
          class="btn-close"
          data-mdb-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body text-dark">
        <form class="modal-form" id="petitionForm" method="POST" action="/petitions/new">
            <div class="form-outline mb-4">
    <input type="email" id="email" name="email" class="form-control" required="true" />
    <label class="form-label" for="email">Email address</label>
  </div>
    <div class="form-outline mb-4">
    <input type="text" id="title" name="title" class="form-control" required="true" />
    <label class="form-label" for="title">Title</label>
  </div>
    <div class="form-outline mb-4">
    <textarea class="form-control" id="description" name="description" rows="4"></textarea>
    <label class="form-label" for="description">Description</label>
  </div>
      <div class="form-outline mb-4">
    <input type="number" id="goal" name="goal" class="form-control" required="true" />
    <label class="form-label" for="goal">Goal</label>
  </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-mdb-dismiss="modal">
          Cancel
        </button>
        <button type="button" id="submitForm" class="btn btn-success">Create Petition</button>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript"> 
  document.getElementById("submitForm").addEventListener("click",()=>{
    document.getElementById('petitionForm').submit();
  });
</script>