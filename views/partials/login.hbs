<button
  type="button"
  class="btn btn-outline-light home-text"
  data-mdb-toggle="modal"
  data-mdb-target="#loginModal"
>
  Login
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="loginModal"
  tabindex="-1"
  aria-labelledby="loginModal"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-dark" id="exampleModalLabel">Login</h5>
        <button
          type="button"
          class="btn-close"
          data-mdb-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body text-dark">
        <form
          class="modal-form"
          id="petitionForm"
          method="POST"
          action="/login"
        >
          <div class="form-outline mb-4">
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              required="true"
            />
            <label class="form-label" for="email">Email address</label>
          </div>

          <script>
            function showPassword() {
              let passwordField = document.getElementById("password");
              let icon = document.getElementById("icon").classList;

              if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.remove("fa-eye");
                icon.add("fa-eye-slash");
              } else {
                passwordField.type = "password";
                icon.remove("fa-eye-slash");
                icon.add("fa-eye");
              }
            }
          </script>

          <div class="input-container form-outline mb-4">
            <input
              class="input-field form-control"
              type="password"
              id="password"
              name="password"
              minlength="8"
            />
            <i
              class="fa fa-eye icon text-dark"
              id="icon"
              role="button"
              onclick="showPassword()"
            ></i>
            <label class="form-label" for="email">Password</label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-mdb-dismiss="modal">
          Cancel
        </button>
        <button type="button" id="submitForm" class="btn btn-success">
          Sign Up
        </button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  document.getElementById("submitForm").addEventListener("click", () => {
    document.getElementById("petitionForm").submit();
  });
</script>
