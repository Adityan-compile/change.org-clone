<h4 class="text-center fw-bold pt-4">PROFILE</h4>

<section class="profile text-dark text-center p-4">
	<form class="p-4" method="POST" action="/user/profile/edit">
		<div class="mb-3">
			<label for="name" class="form-label">Name</label>
			<input
				type="text"
				class="form-control"
				value="{{user.name}}"
				id="name"
				name="name"
			/>
		</div>
		<div class="mb-3">
			<label for="email" class="form-label">Email</label>
			<input
				type="email"
				class="form-control"
				value="{{user.email}}"
				id="email"
				name="email"
			/>
		</div>
		<button type="submit" class="btn btn-outline-primary">Update</button>
	</form>
	<a href="/user/delete" class="btn btn-outline-danger btn-md mb-4">Delete Account</a>
</section>

<section class="petitions container">
	<div class="row mb-4">
		{{#each petitions}}
		<div class="col-md-4">
			<div class="card" style="width: 18rem">
				<div class="card-body">
					<h5 class="card-title">{{this.title}}</h5>
					<h6 class="card-subtitle mb-2 text-muted">
						{{this.dateCreated}}
					</h6>
					<p class="card-text">{{this.description}}</p>
					<a href="#" class="btn btn-danger">Delete</a>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</section>
